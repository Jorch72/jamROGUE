print("Installing installer...")

local url = "https://raw.githubusercontent.com/Lemmmy/CCJam-2016/master/client/installer.lua"

if fs.exists(".jamrogue-installer") then
    fs.delete(".jamrogue-installer")
end

local f = fs.open(".jamrogue-installer", "w")
local h = http.get(url)
f.write(h.readAll())
f.close()

shell.run(".jamrogue-installer")
fs.delete(".jamrogue-installer")